{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voir la liste des annonces</h1>

    {# On peut parcourir des tableaux avec Twig #}
    <ul>
        {% for property in properties %}
            <li>
                <a href="{{ path('property_show', {slug: property.title }) }}">
                    {# path chemin à suivre pour l'url, on peut lui passer 2 paramètres #}
                    {# path(nom de la route, complément de l'url #}
                    {{ property.title }}
                </a>
            </li>
        {% endfor %}
    </ul>

    {# On peut dumper dans twig aussi #}
    {{ dump(properties) }}
{% endblock %}
