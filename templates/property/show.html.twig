{% extends 'base.html.twig' %}

{% block body %}
    Voir l'annonce {{ slug | upper }}
    {% for letter in 'a'..'z' %}
        {# On met la lettre dans une balise strong une fois sur 2  #}
        {# Le filtre raw permet d'interpréter le HTML #}
        {# loop permet de récupérer des infos sur la boucle #}

        {{ cycle(['<strong>', '<span>'], loop.index) | raw }}
        {{ letter }}
        {{ cycle(['</strong>', '</span>'], loop.index) | raw }}
    {% endfor %}
{% endblock %}